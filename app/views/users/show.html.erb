<div class="row" id="usuario-info">
    <ul class="nav nav-tabs ">
        <li class="<%= params[:tab].present? ? params[:tab] == "active" ? "active" : "" : "active" %>"><%= link_to "Perfil", users_path(tab:"profile") %></li>
        <li class="<%=  params[:tab] == "activity" ? "active" : "" %>"><%= link_to "Actividad", users_path(tab:"activity") %></li>
        <% if current_user == @user_show %>
        	<li class="<%=  params[:tab] == "edit" ? "active" : "" %>"><%= link_to "Editar",  edit_user_path(@user_show.username,tab:"edit") %></li>
        <% end %>
    </ul>
    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
        	<div class="col-xs-3 text-center" id="image-rep">
        		<%= image_tag (Gravatar.new("#{@user_show.email}").image_url), height:"180x180" %>
        		<h4>Reputacion: <%= @user_show.questions.count + @user_show.answers.count + @user_show.votes.count + @user_show.unvotes.count %></h4>
        	</div>
        	<div class="col-xs-6" id="info-pri">
        		<h2><strong><%= @user_show.username %></strong></h2>
        		<h3><%= @user_show.info %></h3>
        		<p>otra cosa que voy a pensar</p>
        	</div>
        	<div class="col-xs-3" id="info-seg">
        		<div class="col-xs-6 text-center" >
        			<p><strong><%= @user_show.questions.count %></strong></p>
        			<p>Preguntas</p>
        		</div>
        		<div class="col-xs-6 text-center">
        			<p><strong><%= @user_show.answers.count %></strong></p>
        			<p>Respuestas</p>
        		</div>
        		
				<div class="col-xs-12 co">
					<p><%= fa_icon "envelope-o" %> Email: <%= @user_show.email %></p>
        			<p><%= fa_icon "undo" %> Miembro desde hace <%= time_ago_in_words(@user_show.created_at) %></p> 
				</div>        		     			        		
        	</div>
        </div>
    </div>
