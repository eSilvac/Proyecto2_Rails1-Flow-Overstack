<!DOCTYPE html>
<html>
  <head>
    <title>FlowOverstack</title>
    <%= csrf_meta_tags %>
	<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
      	<%= link_to "Flow <strong>Overstack</strong>".html_safe, questions_path, class:"navbar-brand" %>

      </div>
      <ul class="nav navbar-nav">
		<li><a class="inbox"><%= fa_icon "inbox lg" %></a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      	<% if user_signed_in? %>
            <li><%= link_to (image_tag (Gravatar.new("#{current_user.email}").image_url), height:"31x31"), user_path(current_user.username), class:"user-nav" %></li>
      		<li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
      	<% else %>
      		<li><%= link_to "Iniciar SesiÃ³n", new_user_session_path %></li>
        	<li><%= link_to "Registrarse", new_user_registration_path %></li>
      	<% end %>
        <form class="navbar-form navbar-right">
          <%= form_tag questions_path, method: :get do %>
            <div class="form-group">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar Preguntas" %>
            </div>
          <% end %>
      </form>
      </ul>
      
    </div>
  </nav>
  <br>
  <body>
  	<div class="container">
      <div class="row" id="first-part">
          <div class="col-xs-6" id="title-line">
              <%= link_to questions_path, class:"link-to" do %>
                  <%= image_tag("https://s3.amazonaws.com/flow-overstack-esilva/photo_2017-01-17_00-11-08.jpg", size:"36x39", class:"image")%>
                  <span class="name">Flow <strong>Overstack</strong></span>
              <% end %>
          </div>
          <div class="col-xs-6" id="title-buttons">
              <div class="text-right">
                  <%= link_to "<strong>Preguntas</strong>".html_safe, questions_path, class:"btn btn-default" %>
                  <%= link_to "<strong>Usuarios</strong>".html_safe, users_path, class:"btn btn-default" %>
                  <%= link_to "<strong>Hacer Una Pregunta</strong>".html_safe, new_question_path, class:"btn btn-default" %>
              </div>
          </div>
      </div>

      <br>

  		<%= yield %>
    </div>
  </body>
</html>
